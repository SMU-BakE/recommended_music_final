<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bake.recommended_music_final">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.bake.recommended_music_final.InitialActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.bake.recommended_music_final.friends.FindFriend" />
        <activity android:name="com.bake.recommended_music_final.friends.Following" />
        <activity android:name="com.bake.recommended_music_final.friends.Follower" />

        <activity android:name="com.bake.recommended_music_final.setting.GenderSelect" />
        <activity android:name="com.bake.recommended_music_final.setting.EditProfile" />
        <activity android:name="com.bake.recommended_music_final.setting.RequireUpdate" />
        <activity android:name="com.bake.recommended_music_final.setting.AccountManagement" />
        <activity android:name="com.bake.recommended_music_final.player.PlayerHome" />
        <activity android:name="com.bake.recommended_music_final.setting.SettingListActivity" />
        <activity
            android:name="com.bake.recommended_music_final.userfeed.UserFeedActivity"
            />

        <activity
            android:name="com.bake.recommended_music_final.home.GoodOrBadPopupActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name="com.bake.recommended_music_final.home.EmotionPopUpActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name="com.bake.recommended_music_final.home.CameraActivity"
            android:hardwareAccelerated="true" />
        <activity
            android:name="com.bake.recommended_music_final.home.HeartRatePopUpActivity"
            android:hardwareAccelerated="true"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name="com.bake.recommended_music_final.home.HomeActivity"
            android:theme="@style/AppTheme.home" />
        <activity android:name=".player.PlayMusicVideoActivity" />
        <activity android:name=".user.EmailAuth" />
        <activity android:name=".user.LoginLoading" />
        <activity android:name=".user.FindPassword"
            android:theme="@style/AppTheme.home" />
        <activity android:name=".user.SignInActivity"
            android:theme="@style/AppTheme.home" />
        <activity android:name=".user.SignUpActivity"
            android:theme="@style/AppTheme.home" />

    </application>

</manifest>