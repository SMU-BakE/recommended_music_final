<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bake.recommended_music_final">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".player.StarRatePopup"></activity>
        <activity android:name=".InitialActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".friends.FindFriend" />
        <activity android:name=".friends.Following" />
        <activity android:name=".friends.Follower" />
        <activity android:name=".setting.GenderSelect" />
        <activity android:name=".setting.EditProfile" />
        <activity android:name=".setting.RequireUpdate" />
        <activity android:name=".setting.AccountManagement" />
        <activity android:name=".setting.SettingListActivity" />
        <activity android:name=".userfeed.UserFeedActivity" />
        <activity android:name=".home.HomeActivity" />
        <activity android:name=".user.SignupActivity" />
        <activity android:name=".user.SignInActivity" />
        <activity android:name=".user.FindAcitivty" />
        <activity
            android:name=".player.PlayerHome"
            android:theme="@style/AppTheme.Player" />
        <activity
            android:name=".player.PlayMusicVideoActivity"
            android:theme="@style/AppTheme.Player" />
        <activity
            android:name=".home.GoodOrBadPopupActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".home.EmotionPopUpActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".home.CameraActivity"
            android:hardwareAccelerated="true" />
        <activity
            android:name=".home.HeartRatePopUpActivity"
            android:hardwareAccelerated="true"
            android:theme="@style/AppTheme.Dialog" />
    </application>

</manifest>